/* pages/text/text.wxss */

.container {
  width: 100%;
  height: 600px;
  margin: 0;
  padding: 0;
  background: #f6f6f6;
  /* background: #166fb4 */
}

.progress {
  width: 100%;
  height: 60px;
  background: #f6f6f6;
}

.box {
  width: 90%;
  height: 40px;
  /* background: orange; */
  margin: 10px 5%;
}

.bpic {
  width: 20%;
  height: 40px;
  float: left;
  /* background: rebeccapurple; */
}

.icon {
  width: 20px;
  height: 20px;
  display: block;
  margin: 10px auto;
  /* float: right;  */
}

.bp {
  width: 80%;
  height: 40px;
  /* background: red; */
  float: left;
}

.style {
  color: #166fb4;
  margin: 10px 0;
  font-size: 14px;
}

.main {
  width: 100%;
  height: 400px;
   background: #f6f6f6; 
  margin: 0;
  padding: 0;
}

.text {
  width: 90%;
  height: 380px;
  /* background: #fff; */
  margin: 0 auto;
}

.top {
  width: 100%;
  height: 80px;
  background: #166fb4;
   /* border-radius: 5px; */
  box-shadow: 2px 2px 3px #ccc;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;  
}

.qus {
  width: 90%;
  height: 80px;
  /* background: yellow; */
  margin: 0 auto;
}

.detail {
  width: 100%;
  height: 80px;
  line-height: 80px;
  text-align: center;
  display: block;
  font-size: 16px;
  color: #fff;
  letter-spacing: 2px;
}

.content {
  width: 100%;
  height: 290px;
   background:#fff; 
  /* opacity: 0.2; */
  position: relative;
   border-radius: 5px;
  box-shadow: 2px 2px 3px #ccc;
  /* z-index: -222 */
}

.area {
  width: 35%;
  height: 120px;
  background: linear-gradient(lightblue, #fff);
  /* position: absolute; */
  margin: 10px 25px;
  border-radius: 5px;
  box-shadow: 2px 2px 3px #ccc;
  float: left;
  /* z-index: 222; */
}

.areaPic {
  width: 80%;
  height: 90px;
  /* background: green; */
  margin: 0 auto;
}

.pic {
  width: 100%;
  height: 70px;
  margin: 10px auto;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.areaName {
  width: 90%;
  height: 20px;
  /* background: beige; */
  margin: 0 auto;
}

.name {
  width: 100%;
  height: 20px;
  display: block;
  line-height: 20px;
  font-size: 14px;
  text-align: center;
  color: #444;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.footer {
  width: 100%;
  height: 150px;
  background: #f6f6f6;
}
.foot{
  width: 90%;
  height: 150px;
  /* background: yellow; */
  margin: 0 auto;
  position: relative;
}
.sumbit{
   width: 100%;
  height: 50px;
   background: #166fb4; 
  border-radius: 20px;
  color: #fff;
  position: absolute;
  margin-top: 40px;
  letter-spacing: 2px;
}
.info{
   width: 100%;
  height: 50px;
  display: block;
  font-size: 14px;
  line-height: 50px;
  color: #166fb4;
  text-align: center;
  position: absolute;
  top: 90px;
  /* text-decoration-line: #166fb4; */
}
