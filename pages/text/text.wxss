.areaPic {
  width: 80%;
  height: 90px;
  /* background: green; */
  margin: 0 auto;
}

.pic {
  width: 100%;
  height: 70px;
  margin: 10px auto;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.areaName {
  width: 90%;
  height: 20px;
  /* background: beige; */
  margin: 0 auto;
}

.name {
  width: 100%;
  height: 20px;
