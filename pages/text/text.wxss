  width: 100%;
  height: 600rpx;
}

.r-main {
  width: 90%;
  height: 600rpx;
  /* background: gray; *//* border: 1px #ccc solid; */
  box-shadow: 4rpx 4rpx 4rpx #ccc;
  margin: 0 auto;
  overflow: auto;
  letter-spacing: 2rpx;
}

.r-con {
  width: 90%;
  height: auto;
  display: block;
  font-size: 32rpx;
  color: #222;
  /* text-align: center; */
  margin: 10rpx auto;
  /* overflow: hidden; */
  letter-spacing: 4rpx;
  text-indent: 20rpx;
}

.rBate {
  width: 100%;
  height: 100rpx;
  /* background: beige; */
}

.r-rate {
  width: 85%;
  height: 100rpx;
  /* background: tan; *//* margin:  0 auto; */
  text-align: center;
  float: left;
}

.tell {
  font-size: 36rpx;
  color: #166fb4;
  width: auto;
  height: 100rpx;
  line-height: 100rpx;
  letter-spacing: 2rpx;
}

.per {
  font-size: 40rpx;
  color: #df6868;
}

.rfoot {
  width: 15%;
  height: 100rpx;
  /* margin:  0 auto; *//* text-align: center; */
  float: right;
}

.r-button {
  width: 100%;
  height: 96rpx;
  margin: 2rpx;
  background: none;
  position: relative;
}

.r-button::after {
  border: none;
}

.r-pic {
  width: 80rpx;
  height: 80rpx;
  display: block;
  position: absolute;
  right: 10rpx;
  top: 8rpx;
}

.mask {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  /* overflow: hidden; */
  z-index: 222;
  display: flex;
  flex-direction: column;
  align-items: center; /*垂直居中*/
  justify-content: center; /*水平居中*/
}
