/* pages/text/text.wxss */

.container {
  width: 100%;
  height: 100vh;
  margin: 0;
  padding: 0;
  background: #f6f6f6;
  /* background: #166fb4 */
}

.progress {
  width: 100%;
  height: 80px;
  background: #f6f6f6;
}

.box {
  width: 90%;
  height: 40px;
  background: #fff;
  margin: 30px 5% 10px 5%;
  border-radius: 5px;
}

.my {
  width: 55%;
  height: 40px;
  float: left;
  /* background: rebeccapurple; */
}

.myNum {
  font-size: 16px;
  /* width: 40%; */
  height: 40px;
  line-height: 40px;
  display: block;
  text-indent: 10px;
  color: #444;
  /* background: rebeccapurple; */
  float: left;
}

.record {
  width: 45%;
  height: 40px;
  /* background: red; */
  float: left;
}

.myrecord {
  font-size: 16px;
  /* width: 80%; */
  height: 40px;
  line-height: 40px;
  display: block;
  color: #444;
  float: left;
}

.num {
  width: auto;
  height: 40px;
  line-height: 40px;
  display: block;
  color: #166fb4;
  float: left;
  font-size: 16px;
  text-indent: 5px;
}
.num2{
  color: red;
}

.main {
  width: 100%;
  height: 405px;
  background: #f6f6f6;
  margin-top: 10px;
  padding: 0;
  /* width: 100%; */
  position: relative;
  /* position:  */
}

.main .text:nth-of-type(1) {
  z-index: 10;
}

.main .text:nth-of-type(n+4) {
  transform: translateX(40px) scale(0.6);
  transform-origin: 100% 50% 0;
}

.main .text {
  transition: all 1s;
  overflow: hidden;
  border-radius: 1px;
  /* margin-top:15px;   */
  width: calc(100% - 10%);
  height: auto;
  background: #f6f6f6;
  position: absolute;
  box-shadow: 3px 3px 10px 0px #777;
  margin-left: 5%;
}

.top {
  width: 100%;
  height: 80px;
  background: #166fb4;
  box-shadow: 2px 2px 3px #ccc;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.qus {
  width: 90%;
  height: 80px;
  /* background: yellow; */
  margin: 0 auto;
}

.detail {
  width: 100%;
  height: 80px;
  line-height: 80px;
  text-align: center;
  display: block;
  font-size: 16px;
  color: #fff;
  letter-spacing: 2px;
}

.content {
  width: 100%;
  height: 290px;
  background: #fff;
  /* opacity: 0.2; */
  position: relative;
  border-radius: 5px;
  box-shadow: 2px 2px 3px #ccc;
  /* z-index: -222 */
}

.selection1 {
  width: 35%;
  height: 120px;
  background: linear-gradient(lightblue, #fff);
  /* position: absolute; */
  margin: 10px 25px;
  border-radius: 5px;
  box-shadow: 2px 2px 3px #ccc;
  float: left;
  /* z-index: 222; */
}

.selection2 {
  width: 35%;
  height: 120px;
  background: #df6868;
