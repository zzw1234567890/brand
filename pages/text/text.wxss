/* pages/text/text.wxss */

.container {
  width: 100%;
  height: 100vh;
  margin: 0;
  padding: 0;
  background: #f6f6f6;
}

.progress {
  width: 100%;
  height: 160rpx;
  background: #f6f6f6;
}

.box {
  width: 90%;
  height: 80rpx;
  background: #fff;
  margin: 60rpx 5% 20rpx 5%;
  border-radius: 10rpx;
}

.my {
  width: 55%;
  height: 80rpx;
  float: left;
  /* background: rebeccapurple; */
}

.myNum {
  font-size: 32rpx;
  /* width: 40%; */
  height: 80rpx;
  line-height: 80rpx;
  display: block;
  text-indent: 20rpx;
  color: #444;
  /* background: rebeccapurple; */
  float: left;
}

.record {
  width: 45%;
  height: 80rpx;
  /* background: red; */
  float: left;
}

.myrecord {
  font-size: 32rpx;
  /* width: 80%; */
  height: 80rpx;
  line-height: 80rpx;
  display: block;
  color: #444;
  float: left;
}

.num {
  width: auto;
  height: 80rpx;
  line-height: 80rpx;
  display: block;
  color: #166fb4;
  float: left;
  font-size: 32rpx;
  text-indent: 10rpx;
}

.num2 {
  color: red;
}

.main {
  width: 100%;
  height: 810rpx;
  background: #f6f6f6;
  margin-top: 20rpx;
  padding: 0;
  /* width: 100%; */
  position: relative;
  /* position:  */
}

.main .text:nth-of-type(1) {
  z-index: 10;
}

.main .text:nth-of-type(n+4) {
  transform: translateX(40px) scale(0.6);
  transform-origin: 100% 50% 0;
}

.main .text {
  transition: all 1s;
  overflow: hidden;
  border-radius: 2rpx;
  /* margin-top:15px;   */
  width: calc(100% - 10%);
  height: auto;
  background: #f6f6f6;
  position: absolute;
  box-shadow: 6rpx 6rpx 20rpx 0rpx #777;
  margin-left: 5%;
}

.top {
  width: 100%;
  height: 160rpx;
  background: #166fb4;
  box-shadow: 4rpx 4rpx 6rpx #ccc;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.qus {
  width: 90%;
  height: 160rpx;
  /* background: yellow; */
  margin: 0 auto;
}

.detail {
  width: 100%;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  display: block;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 4rpx;
}

.content {
  width: 100%;
  height: 580rpx;
  background: #fff;
  /* opacity: 0.2; */
  position: relative;
  border-radius: 10rpx;
  box-shadow: 4rpx 4rpx 6rpx #ccc;
  /* z-index: -222 */
}

.selection1 {
  width: 35%;
  height: 240rpx;
  background: linear-gradient(lightblue, #fff);
  /* position: absolute; */
  margin: 20rpx 50rpx;
  border-radius: 10rpx;
  box-shadow: 4rpx 4rpx 6rpx #ccc;
  float: left;
  /* z-index: 222; */
}

.selection2 {
  width: 35%;
  height: 240rpx;
  background: #df6868;
  /* position: absolute; */
  margin: 20rpx 50rpx;
  border-radius: 10rpx;
  box-shadow: 4rpx 4rpx 6rpx #ccc;
  float: left;
  /* z-index: 222; */
}

.selection3 {
  width: 35%;
  height: 240rpx;
  background: lightgreen;
  /* position: absolute; */
  margin: 20rpx 50rpx;
  border-radius: 10rpx;
  box-shadow: 4rpx 4rpx 6rpx #ccc;
  float: left;
  /* z-index: 222; */
}

.areaPic {
  width: 80%;
  height: 180rpx;
  /* background: green; */
  margin: 0 auto;
}

.pic {
  width: 100%;
  height: 140rpx;
  margin: 20rpx auto;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
}

.areaName {
  width: 90%;
  height: 40rpx;
  /* background: beige; */
  margin: 0 auto;
}

.name {
  width: 100%;
  height: 40rpx;
  display: block;
  line-height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  color: #444;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.footer {
  width: 100%;
  height: 300rpx;
  background: #f6f6f6;
}

.foot {
  width: 90%;
  height: 300rpx;
  /* background: yellow;  */
  margin: 0 auto;
  position: relative;
}

.sumbit {
  width: 100%;
  height: 100rpx;
  background: #166fb4;
  border-radius: 20rpx;
  color: #fff;
  position: absolute;
  margin-top: 80rpx;
  letter-spacing: 4rpx;
  /* margin-left: 10px; *//* float: left; */
}

.info {
  width: 100%;
  height: 100rpx;
  display: block;
  font-size: 28rpx;
  line-height: 100rpx;
  color: #166fb4;
  text-align: center;
  position: absolute;
  top: 180rpx;
  /* text-decoration-line: #166fb4; */
}

.result {
  width: 90%;
  height: 70vh;
  top: 10vh;
  left: 5%;
  position: fixed;
  box-shadow: 4rpx 4rpx 6rpx #fff;
  border-radius: 10rpx;
  background: linear-gradient(lightblue, #fff);
  z-index: 9999;
}

.rTop {
  width: 100%;
  height: 140rpx;
  /* background: rebeccapurple; */
}

.rName {
  width: 90%;
  height: 140rpx;
  /* background: yellow; */
