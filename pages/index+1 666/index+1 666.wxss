.header {
  height: 500rpx;
   border-bottom: 10rpx solid #f4f4f4; 
  display: flex;
  flex-direction: column;
  justify-content: space-between;
   box-shadow:0 4rpx 20rpx 2rpx #eee;
}

.header .bg {
  background-size: cover;
  position: absolute;
  z-index: -1;
  width: 100%;
   /* height: 100%;  */
  -webkit-filter: blur(15px);
  -moz-filter: blur(15px);
  -o-filter: blur(15px);
  -ms-filter: blur(15px);
  filter: blur(15px);
}

.header .body_1 {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}


.header .body_1 .collection {
  width: 50%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 40rpx;
    background: linear-gradient(rgba(0, 0, 0, 0),rgba(0, 0, 0, 0.2));   
   /* background: rgba(0, 0, 0, 0.1);  */
  color: white;
  border-right: 2rpx solid white;
   /* background: rgba(255, 255,255, 0.2);  */
}

